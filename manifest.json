{
  "name": "StreamerHUD",
  "description": "Chrome/Brave browser extension. Toggle streamer HUD on the play-cs.com (CS 1.6 in browser).",
  "version": "1.3.1",
  "author": "st4r",
  "manifest_version": 3,
  "icons": {
    "16": "/images/img16.png",
    "32": "/images/img32.png",
    "48": "/images/img48.png",
    "128": "/images/img128.png"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://game.play-cs.com/*"],
  "content_scripts": [
    {
      "js": ["init.js"],
      "matches": ["https://game.play-cs.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["init.css"],
      "matches": ["https://game.play-cs.com/*"]
    }
  ]
}
